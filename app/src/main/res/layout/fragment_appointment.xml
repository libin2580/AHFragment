<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_account_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"

        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_5sdp"

        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/title_box"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appointment"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:id="@+id/heading"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"/>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9"
            android:background="@drawable/rounded_box"
            android:paddingRight="@dimen/_5sdp"
            android:paddingLeft="@dimen/_5sdp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--_________________________cases an lawyer for normal appointment start_________________________________________-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/appointment_home_section">


                        <!--_________________________cases row start_________________________________________-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_8sdp"
                            >


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".15"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cases "
                                    android:id="@+id/appointment_case_txt_view"
                                    android:textColor="#000000"
                                    />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:orientation="horizontal">



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".8">
                                        <Spinner
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_25sdp"
                                            android:background="@drawable/cases_box"
                                            android:id="@+id/cases_spinner"
                                            android:textAlignment="center"
                                            >

                                        </Spinner>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".1"
                                        >

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/dropdown"
                                            android:layout_marginRight="@dimen/_5sdp"
                                            android:id="@+id/dropDownImage"
                                            />
                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>



                        </LinearLayout>
                        <!--_________________________cases row end_________________________________________-->



                        <!--_________________________lawyer row start_________________________________________-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            >


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".15"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lawyer "
                                    android:id="@+id/appointment_lawyer_txt_view"
                                    android:textColor="#000000"
                                    />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:orientation="horizontal">



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".8">
<!--nd spinner is used because normal spinner onitemselected function doesn.t work for selected item if it is again selected-->
                                        <alhamdi.com.cybraum.meridianuae.app.alhameedifragment.NDSpinner
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/_25sdp"
                                            android:background="@drawable/cases_box"
                                            android:id="@+id/lawyer_spinner"
                                            android:textAlignment="center"

                                            >

                                        </alhamdi.com.cybraum.meridianuae.app.alhameedifragment.NDSpinner>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".1"
                                        >

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/dropdown"
                                            android:layout_marginRight="@dimen/_5sdp"
                                            android:id="@+id/dropDownImage2"
                                            />
                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>



                        </LinearLayout>
                        <!--_________________________lawyer row end_________________________________________-->
                        </LinearLayout>
                        <!--_________________________cases an lawyer for normal appointment end_________________________________________-->









                        <!--_________________________cases an lawyer for make appointment from lawyers start_________________________________________-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/appointment_mylawyer_section"
                        android:visibility="gone">

                    <!--_________________________lawyer row start_________________________________________-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_10sdp"
                            >


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".15"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Lawyer "
                                    android:id="@+id/from_my_lawyers_appointment_lawyer_txt_view"
                                    android:textColor="#000000"
                                    />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:orientation="horizontal">



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".9">
                                        <Spinner
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/cases_box"
                                            android:id="@+id/from_my_lawyers_lawyer_spinner"
                                            android:textAlignment="center"
                                            android:layout_marginRight="@dimen/_5sdp"
                                            >

                                        </Spinner>
                                    </LinearLayout>





                                </LinearLayout>

                            </LinearLayout>



                        </LinearLayout>
                        <!--_________________________lawyer row end_________________________________________-->
                        <!--_________________________cases row start_________________________________________-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_8sdp"
                            >


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".15"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cases "
                                    android:id="@+id/from_my_lawyers_appointment_case_txt_view"
                                    android:textColor="#000000"
                                    />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:orientation="horizontal">



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".8">
                                        <Spinner
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/cases_box"
                                            android:id="@+id/from_my_lawyers_cases_spinner"
                                            android:textAlignment="center"
                                            >

                                        </Spinner>
                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight=".1"
                                        >

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@drawable/dropdown"
                                            android:layout_marginRight="@dimen/_5sdp"
                                            android:id="@+id/from_my_lawyers_dropDownImage"
                                            />
                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>



                        </LinearLayout>
                        <!--_________________________cases row end_________________________________________-->


</LinearLayout>

                        <!--_________________________cases an lawyer for make appointment from lawyers  end_________________________________________-->




                        <!--_________________________description row start_________________________________________-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:focusable="true" android:focusableInTouchMode="true"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Description"
                                android:textColor="#000000"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:id="@+id/appointment_description_txt_view"

                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/border"
                                android:layout_margin="@dimen/_5sdp">
                            <EditText
                                android:inputType="textMultiLine"
                                android:id="@+id/description"
                                android:lines="3"
                                android:textSize="15sp"
                                android:gravity="top|left"
                                android:maxLines="20"
                                android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:scrollbars="vertical"
                                android:background="@drawable/namebox"

                                android:imeOptions="flagNoExtractUi"
                                android:padding="@dimen/_10sdp"
                                />
</LinearLayout>

                        </LinearLayout>

                        <!--_________________________description row end_________________________________________-->
                        <!--_________________________name row start_________________________________________-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            >


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".15"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_5sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Name "
                                    android:textColor="#000000"
                                    android:id="@+id/appointment_name_txt_view"
                                    />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    >
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/namebox"
                                    android:textSize="@dimen/_13sdp"
                                    android:padding="@dimen/_5sdp"

                                    android:singleLine="true"
                                    android:id="@+id/name"
                                    />
</LinearLayout>
                            </LinearLayout>



                        </LinearLayout>
                        <!--_________________________name row end_________________________________________-->

                        <!--_________________________email row start_________________________________________-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:paddingBottom="@dimen/_10sdp"
                            >


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".15"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_5sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email "
                                    android:id="@+id/appointment_email_txt_view"
                                    android:textColor="#000000"
                                    />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    >
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/namebox"
                                    android:textSize="@dimen/_13sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:singleLine="true"
                                    android:id="@+id/email"
                                    />
</LinearLayout>
                            </LinearLayout>



                        </LinearLayout>
                        <!--_________________________email row end_________________________________________-->
                        <!--_________________________phone row start_________________________________________-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"


                            >


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".15"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_5sdp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phone "
                                    android:id="@+id/appointment_phone_txt_view"
                                    android:textColor="#000000"
                                    />
                            </LinearLayout>



                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    >
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/namebox"
                                    android:textSize="@dimen/_13sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:singleLine="true"
                                    android:inputType="phone"
                                    android:id="@+id/phone"
                                    />
</LinearLayout>
                            </LinearLayout>



                        </LinearLayout>
                        <!--_________________________phone row end_________________________________________-->



                        <!--_________________________date and time row start_________________________________________-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_68sdp"
                            android:orientation="horizontal"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Date "
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:id="@+id/appointment_date_txt_view"
                                        android:textColor="#000000"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginRight="@dimen/_25sdp"

                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/border"
                                        android:layout_marginRight="@dimen/_1sdp"
                                        >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/namebox"

                                        android:padding="@dimen/_5sdp"
                                        android:singleLine="true"
                                        android:id="@+id/date"

                                        android:text="select date"
                                      android:textAlignment="center"
                                        android:textColor="#000000"
                                        />
                                        </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Time "
                                        android:textColor="#000000"
                                        android:layout_marginTop="@dimen/_4sdp"
                                        android:id="@+id/appointment_time_txt_view"
                                        android:layout_marginLeft="@dimen/_10sdp"
                                        android:layout_marginRight="@dimen/_15sdp"

                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/border"
                                        android:layout_marginRight="@dimen/_5sdp"
                                        >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/namebox"

                                        android:padding="@dimen/_5sdp"
                                        android:singleLine="true"
                                        android:id="@+id/time"
                                        android:text="select time"
                                        android:textAlignment="center"
                                        android:textColor="#000000"

                                        />
                                        </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>
                        <!--_________________________date and time row end_________________________________________-->


                    </LinearLayout>
                </ScrollView>

            </LinearLayout>





        </LinearLayout>



        <!--_________________________submit row start_________________________________________-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:background="@drawable/bottom_box"
            android:id="@+id/submit_button"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="-5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:id="@+id/appointment_submit_btn_txt_view"
                android:textColor="#ffffff"/>

        </LinearLayout>
        <!--_________________________submit row end_________________________________________-->





    </LinearLayout>



</LinearLayout>