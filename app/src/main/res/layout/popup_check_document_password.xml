<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#a2000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="#f4f4f4"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right">
            <ImageButton
                android:id="@+id/document_pass_check_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clear_black_24dp"
                android:layout_marginRight="@dimen/_3sdp"
                android:background="@null"
                />
        </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginLeft="@dimen/_10sdp"
          android:layout_marginRight="@dimen/_10sdp"
       >


          <!--<LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight=".1"
              android:layout_gravity="center|right"
              android:gravity="center|right">

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:minWidth="@dimen/_21sdp"
                  android:minHeight="@dimen/_15sdp"
                  android:background="@drawable/ic_lock_outline_black_24dp"/>

          </LinearLayout>-->
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1">
              <EditText
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="@dimen/_10sdp"
                  android:background="@null"
                  android:hint="Enter Password"
                  android:textSize="@dimen/_12sdp"
                  android:textAlignment="center"
                  android:singleLine="true"
                  android:textColor="#000000"
                  android:fontFamily="sans-serif"
                  android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
                  android:drawableTint="#d9343d"
                  android:inputType="textPassword"
                  android:id="@+id/document_password"/>

          </LinearLayout>

          <!--<LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight=".1">

          </LinearLayout>-->
      </LinearLayout>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="status"
            android:fontFamily="sans-serif"
            android:id="@+id/document_status"
            android:visibility="gone"
            android:textColor="#ff0000"
            android:layout_marginBottom="@dimen/_3sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"

            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/registerbox"
            android:layout_gravity="center"
            android:gravity="center"
            android:clickable="true"
            android:id="@+id/unlock_document"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlock"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:id="@+id/forgot_document_password">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password ?"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="sans-serif"
                android:id="@+id/forgot_document_password_textview"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>