<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alhamdi.com.cybraum.meridianuae.app.alhameedifragment.Login"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="alhamdi.com.cybraum.meridianuae.app.alhameedifragment.Login"
    android:background="@drawable/signin_bg"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/logo"
                android:layout_marginTop="@dimen/_20sdp"/>

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:requiresFadingEdge="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:padding="@dimen/_10sdp"
            android:hint="Username"
            android:fontFamily="sans-serif"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/namebox"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:id="@+id/reg_username"
            android:textSize="16sp"


            />
       <!-- <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:padding="@dimen/_10sdp"
            android:hint="Name"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/namebox"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:id="@+id/reg_name"
            android:textSize="16sp"
            />
-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:padding="@dimen/_10sdp"
            android:hint="Email"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/namebox"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:id="@+id/reg_email"
            android:textSize="16sp"



            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:padding="@dimen/_10sdp"
            android:hint="Phone"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/namebox"
            android:textColor="#000000"
            android:inputType="phone"
            android:gravity="center_horizontal"
            android:id="@+id/reg_phone"
            android:textSize="16sp"
            android:fontFamily="sans-serif"


            />
                <EditText
                    android:inputType="textMultiLine"
                    android:id="@+id/reg_location"
                    android:lines="2"
                    android:textSize="15sp"
                    android:hint="Address"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="20"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:scrollbars="vertical"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:background="@drawable/namebox"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:imeOptions="flagNoExtractUi"
                    android:padding="@dimen/_10sdp"
                    android:fontFamily="sans-serif"
                    />
       <!-- <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:padding="@dimen/_10sdp"
            android:hint="Address"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/namebox"
            android:textColor="#000000"
            android:id="@+id/reg_location"
            android:textSize="16sp"

            />
-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:padding="@dimen/_10sdp"
            android:hint="Password"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/namebox"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:id="@+id/reg_password"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:fontFamily="sans-serif"


            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:padding="@dimen/_10sdp"
            android:hint="Confirm Password"
            android:singleLine="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/namebox"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:inputType="textPassword"
            android:id="@+id/reg_cnf_password"
            android:textSize="16sp"
            android:fontFamily="sans-serif"

            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:padding="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/registerbox"
            android:gravity="center"
            android:id="@+id/user_register_button"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="16sp"
                android:id="@+id/reg_button_txt_view"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                />
        </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>



</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/progress_loader_layout_color"
        android:id="@+id/progress_loader_layout"
        android:visibility="gone"
        android:gravity="center"
        android:clickable="true"


        >
        <include layout="@layout/progressloader"/>
    </LinearLayout>
</RelativeLayout>